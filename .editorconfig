# editorconfig
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.c]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.h]
indent_style = space
indent_size = 2

[*.php]
indent_style = tab
indent_size = 2
